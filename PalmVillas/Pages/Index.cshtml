@page
@model PalmVillas.Pages.IndexModel
@{
}



@{
    ViewData["Title"] = "Home Page";
}


<div class="w3-display-container">
    <img src="~/images/villa_pool.png" class="w3-image" style="width:100%">

    <div class="w3-display-topmiddle main-heading">
        <h1 class="w3-text-white w3-opacity w3-font-">Palm Bingin</h1>
        <h2 class="">Luxury villas in Bingin, Bali</h2>
    </div>

</div>

<h4>For testing purposes, this is a list of your Indentity claims</h4>
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <table class="table table-sm">
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>

}



